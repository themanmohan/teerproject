                           <form action="/commonnumbernightround2/<%=data._id %>/delete?_method=DELETE" method="POST">
                              <button class="btn btn-sm  btn-dark text-center bg-white text-dark mb-3" class="">Delete</button>
                           </form>
                        </td>
                     <%}%>
                        <%}%>
         
                     </tr>
                     <%})%>
               </tbody>
            </table>
         </div>
         </div>

         </div>
         </div>

         </div>
      </section>


   </main>
